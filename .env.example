# --- LNMarkets API (example values only) ---
LNM_API_KEY=example_api_key_here
LNM_API_SECRET=example_api_secret_here
LNM_API_PASSPHRASE=example_passphrase_here
LNM_NETWORK=mainnet (or testnet) #I only worked with mainnet, "BOT_MODE" and other security elements were implemented for paper trading

# --- Runtime mode ---
BOT_MODE=paper            # paper | backtest | live (live disabled in public repo)
DRY_RUN=true

# --- Strategy / Backtest ---
TIMEFRAME=10m
SCENARIO=tighter_25_75_bw

# --- Risk / Capital ---
START_EQUITY_SATS=1000000
MAX_TRADES_PER_DAY=10
DAILY_LOSS_LIMIT_PCT=0.02
COOLDOWN_AFTER_EXIT_SEC=60

# --- Misc ---
MPLBACKEND=Agg
